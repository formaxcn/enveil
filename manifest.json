{
  "manifest_version": 3,
  "name": "enveil",
  "version": "1.0",
  "description": "Environment identification tool - distinguish websites by banners and overlays based on domain names",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "enveil"
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/storage/storage.js", "src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_start"
    }
  ]
}