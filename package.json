{
  "name": "enveil",
  "description": "Environment Visual Identifier for Chrome - Visual indicators for different environments",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": ["chrome-extension", "environment", "development", "devops", "visual-indicator"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/enveil.git"
  },
  "homepage": "https://your-username.github.io/enveil/",
  "bugs": {
    "url": "https://github.com/your-username/enveil/issues"
  },
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
